
 <% if @single_category %>
<% if @single_category.shoping_lists.length %>
  <%= @single_category.shoping_lists.sum(:amount) %>
  
  <% @single_category.shoping_lists.each do |category| %>
      <div class="card mb-3">
        <div class="row g-0 text-center">
          <div class="col-3 ">
            <img src=<%= category.icon %> class="img-fluid rounded-start" alt="...">
          </div>
            <div class="card-body col-5 d-flex flex-column">
              <h5 class="card-title"><%= category.name %></h5>
              <p class="card-text pt-3"><%= category.created_at.strftime("%d, %B %Y   %l:%M %p") %></p>
            </div>
            <div class="col-3 d-flex flex-column align-items-center justify-content-center">
            <p class="card-text align-self-center">$<%= category.amount %></p>
          </div>
        </div>
      </div>
  <% end %>
<% else %>
  <h3>You don't have any category, please add them
<% end %> 
<% end %> 
<% @single_category.shoping_lists.order('created_at DESC').limit(2).each do |h| %>
  <div class="card-body">
    <h5 class="card-title"><%= h.name %></h5>
    <p class="card-text">Total expense: <%= h.amount %></p>
    <p class="card-text">Time: <%= h.created_at %></p>
  </div>
<% end %>


 <div class="card mb-3">
  <div class="row g-0">
    <div class="col-4">
      <img src=<%= @single_category.icon %> class="img-fluid rounded-start" alt="..."> 
    </div>
    <div class="col-6">
      <div class="card-body">
        <h5 class="card-title"><%= @single_category.name %></h5>
        <p class="card-text">Total expense: </p>
      </div>
    </div>
  </div>
</div>

